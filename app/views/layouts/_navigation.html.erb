<ul class="nav">
  <li>
    <%= link_to "Family Directory", root_path, :class => 'brand' %>
  </li>
</ul>

<div class="btn-group nav_item">
  <%= link_to "Create New Family", new_family_path, class: "btn btn-success btn-small" %>
</div>

<div class="btn-group nav_item">
	<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
	Directory Listings <span class="caret"></span>
	<% end %>
	<ul class="dropdown-menu">
		<% menulist = [
				["Parent Directory", parents_path],
				["Student Directory", students_path],
				["Teacher Directory", teachers_path],
				["Classes Directory", schoolclasses_path]
				] %>

		<% menulist.each do |ml| %>
			<li>
				<%= link_to ml[0], ml[1] %>
			</li>
		<% end %>
<% if false %>
		<% if admin_logged_in? %>
			<li class="divider"></li>
			<li>
				<%= link_to(new_category_path) do %>
					<i class="icon-plus"></i>
					New Category
				<% end %>
			</li>
		<% end %> <!-- admin logged in -->
<% end %> <!-- if false -->
	</ul>
</div>

<% if logged_in? %>
	<div class="btn-group nav_item">
		<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
			<%= ("&nbsp;" + current_user_get.username + "&nbsp;&nbsp;").html_safe %><span class="caret"></span>
		<% end %>

		<ul class="dropdown-menu">
			<li>
				<%= link_to(edit_user_path(current_user_get)) do %>
					<i class='icon-pencil'></i>
					Edit Profile
				<% end %>
			</li>
			<li>
				<%= link_to(user_path(current_user_get)) do %>
					<i class='icon-user'></i>
					View Profile
				<% end %>
			</li>
			<li>
				<%= link_to(logout_path) do %>
					<i class='icon-circle-arrow-left'></i>
					Logout
				<% end %>
			</li>
		</ul>
	</div>
<% else %>
	<div class="nav_item">
  	<%= link_to "Register", register_path, class: "btn btn-small" %>
	</div>
	<div class="nav_item">
  	<%= link_to "Sign In", login_path, class: "btn btn-success btn-small" %>
	</div>
<% end %>


<% if false %>

	<div class="nav_item">
	  <%= link_to "Create New Post", new_post_path, class: "btn btn-success btn-small" %>
	</div>


	<div class="btn-group nav_item">
		<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
			<i class="icon-search"></i>
			&nbsp;Search&nbsp;&nbsp;<span class="caret"></span>
		<% end %>

		<ul class="dropdown-menu">
			<li>
			  <%= link_to(search_users_path) do %>
			  	<i class="icon-user"></i>
			  	Search Users
			  <% end %>
			</li>
			<li>
			  <%= link_to(search_posts_path) do %>
				  <i class="icon-inbox"></i>
				  Search Posts
			  <% end %>
			</li>
		</ul>
	</div>
<% end %>


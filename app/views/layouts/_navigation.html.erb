<ul class="nav">
  <li>
    <%= link_to "Family Directory", families_path, :class => 'brand' %>
  </li>
</ul>

<% if logged_in? %>
	<div class="btn-group nav_item">
	  <%= link_to "Create New Family", new_family_path, class: "btn btn-success btn-small", style: "padding-bottom: 6px;" %>
	</div>

	<div class="btn-group nav_item">
		<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown", style: "padding-bottom: 6px;" do %>
		Directory Listings <span class="caret"></span>
		<% end %>
		<ul class="dropdown-menu">
			<% menulist = [
					["Parent Directory", parents_path],
					["Student Directory", students_path],
					["Teacher Directory", teachers_path],
					["Classes Directory", schoolclasses_path]
					] %>

			<% menulist.each do |ml| %>
				<li>
					<%= link_to ml[0], ml[1] %>
				</li>
			<% end %>
		</ul>
	</div>
	
	<div class="btn-group nav_item">
	  <%= link_to(search_path) do %>
	  	<span class="btn btn-primary"><i class="icon-search" style="padding-right: 4px;"></i>
	  	Search</span>
  	<% end %>
  </div>

	<div class="btn-group nav_item">
		<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown", style: "padding-bottom: 6px;" do %>
			<%= ("&nbsp;" + current_user_get.username + "&nbsp;&nbsp;").html_safe %><span class="caret"></span>
		<% end %>

		<ul class="dropdown-menu">
			<li>
				<%= link_to(edit_user_path(current_user_get)) do %>
					<i class='icon-pencil'></i>
					Edit Profile
				<% end %>
			</li>
			<li>
				<%= link_to(user_path(current_user_get)) do %>
					<i class='icon-user'></i>
					View Profile
				<% end %>
			</li>
			<li>
				<%= link_to(logout_path) do %>
					<i class='icon-circle-arrow-left'></i>
					Logout
				<% end %>
			</li>
		</ul>
	</div>

	<div class="btn-group nav_item">
	  <%= link_to(freshuser_path) do %>
	  	<span class="btn btn-info"><i class="icon-question-sign" style="padding-right: 4px;"></i>
	  	Help</span>
  	<% end %>
  </div>

<% end %>



<% if false %>

	<div class="nav_item">
	  <%= link_to "Create New Post", new_post_path, class: "btn btn-success btn-small" %>
	</div>


	<div class="btn-group nav_item">
		<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
			<i class="icon-search"></i>
			&nbsp;Search&nbsp;&nbsp;<span class="caret"></span>
		<% end %>

		<ul class="dropdown-menu">
			<li>
			  <%= link_to(search_users_path) do %>
			  	<i class="icon-user"></i>
			  	Search Users
			  <% end %>
			</li>
			<li>
			  <%= link_to(search_posts_path) do %>
				  <i class="icon-inbox"></i>
				  Search Posts
			  <% end %>
			</li>
		</ul>
	</div>
<% end %>


<!-- this is the login form -->

<%= render "shared/content_title", title_var: "Log In" %>

<div class="well">

	<%= form_tag("/login", class: "form-inline") do %>
		<div class="control-group">
			<div class="row">
				<div class="span1">
					<%= label_tag(:username, "Username") %>
				</div>
				<div class="span2">
					<%= text_field_tag(:username, @login_username, {placeholder: "<Username>", autofocus: "autofocus"}) %>
				</div>
			</div>
		</div>
		<div class="control-group">
			<div class="row">
				<div class="span1">
					<%= label_tag(:password, "Password") %>
				</div>
				<div class="span2">
					<%= password_field_tag(:password, nil, {placeholder: "<Password>"}) %>
				</div>
			</div>
		</div>

		<%= submit_tag("Login",	class: "btn btn-success btn-large", style: "margin-top: 40px;") %>
	<% end %>

	<div class="well">
		<p> Don't have an account?  Register!</p>
		<%= link_to "Register", register_path, class: "btn btn-large" %>
	</div>

</div>

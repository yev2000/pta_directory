<% if errors_set && errors_set.any? %>
  <div class="row">
    <div class="alert alert-error span8">
      <h5>There were some errors; please fix them</h5>
      <ul>
        <% errors_set.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

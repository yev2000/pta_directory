<%= render "shared/content_title", {title_var: title_var} %>

<!-- if the user is a superadmin, allow switching to other -->
<!-- user views -->
<% if superadmin_logged_in? %>
	<div class="well span8">
		<%= form_tag(admin_edit_users_path, :method => "get", class: "span6 form-inline") do %>
			<div class="control-group">
				<div class="row">
					<div class="span2">
						<%= label_tag(:uname, "Switch to user:") %>
					</div>
					
					<div class="span3">
						<% edituser = User.find_by(slug: params[:id]) %>
						<%= select_tag(:id, options_for_select(User.all.map { |u| u.username}, edituser ? edituser.username : nil)) %>
					</div>
				</div>
			</div>

			<br>
			<%= submit_tag("Switch User") %>

		<% end %>
	</div>
<% end %>

<% create_button_string = @user.new_record? ? "Create User Account" : "Update User Account" %>

<!-- display error messages -->
<%= render "shared/errors_display", errors_set: @user.errors %>

<div class="well span8">
	<%= form_for @user, html: {class: "span6 form-inline"} do |f| %>
		<div class="control-group">
      <div class="row">
        <div class="span1">
          <%= f.label :username %>
        </div>
        <div class="span2">
			    <%= f.text_field :username %>
        </div>
      </div>
		</div>

		<div class="control-group">
      <div class="row">
        <div class="span1">
    			<%= f.label :password %>
        </div>
        <div class="span2">
          <%= f.password_field :password %>
        </div>
      </div>
		</div>

    <div class="control-group">
      <div class="row">
        <div class="span1">
          <%= f.label :password_confirm %>
        </div>
        <div class="span2">
          <%= f.password_field :password_confirm %>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="row">
        <div class="span1">
          <%= f.label :email %>
        </div>
        <div class="span2">
          <%= f.text_field :email %>
        </div>
      </div>
    </div>

		<% if superadmin_logged_in? %>
			<!-- superadmins should not be able to change their own role    -->
			<!-- remember that @user is not necessarily the logged-in user. -->
			<% if !@user.superadmin? %>
				<div class="control-group">
          <div class="row">
            <div class="span1">
    					<%= f.label :role %>
            </div>
            <div class="span2">
			   		  <%= f.select(:role, @user.avail_roles) %>
            </div>
				  </div>
        </div>
			<% end %>

		<% end %>
		
		<br>
		<%= f.submit create_button_string || "Submit", class: "btn btn-success" %>
		</div>
	<% end %>

</div>


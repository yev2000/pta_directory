<% allow_add_parent_var ||= "" %>
<% warn_on_empty_var ||= "" %>
<% family_var ||= nil %>
<% compact_var ||= "" %>
<% name_method ||= :first_last %>

<div class="well">
  <% if parent_list_var.size > 0 %>
    <% parent_list_var.each do |p| %>
      <%= render "parents/parent_entry", {parent_var: p, family_var: family_var, compact_var: compact_var, name_method: name_method} %>
    <% end %>  <!-- parent iteration --> 
  <% else %>
    <% if warn_on_empty_var == "warn" && family_var %>
      <p>
        No parent information has been created yet.
        <% if allow_add_parent_var == "allow" %>
          Would you like to add parents to this family?  
        <% else %>
          <em class="quiet">You do not have permissions to modify parent information.</em>
        <% end %>
      </p>
    <% end %>
  <% end %>

  <% if allow_add_parent_var == "allow" && family_var %>
    <%= link_to '<i class="icon-plus"></i>Add Parent'.html_safe, new_family_parent_path(family_var), class: "btn btn-small" %>
  <% end %>

</div>
